{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "schedule:weekly",
    "group:allNonMajor",
    ":semanticCommitTypeAll(chore)"
  ],
  "pin": false,
  "node": false,
  "rangeStrategy": "bump",
  "labels": ["dependencies"],
  "ignoreDeps": [
    "zx"
  ]
}
